<p id="notice"><%= notice %></p>

<h1>Fans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Enthusiasm level</th>
      <th>Favorite player</th>
      <th>Email</th>
      <th>Hooliganism level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fans.each do |fan| %>
      <tr>
        <td><%= fan.name %></td>
        <td><%= fan.enthusiasm_level %></td>
        <td><%= fan.favorite_player %></td>
        <td><%= fan.email %></td>
        <td><%= fan.hooliganism_level %></td>
        <td><%= link_to 'Show', fan %></td>
        <td><%= link_to 'Edit', edit_fan_path(fan) %></td>
        <td><%= link_to 'Destroy', fan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

